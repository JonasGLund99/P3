@using src.Data
@using src.Shared

<div class="result-table-component">
    <div id="toolbar">
        <button @onclick='() => SetMode("XYZ")' class="result-buttons @(mode=="XYZ" ? "result-button-active" : "")">
                (x-y)/z
            </button>
        <button @onclick='() => SetMode("Log2")' class="result-buttons @(mode=="Log2" ? "result-button-active" : "")">
            Log
            <sub>2</sub>
            </button>

        <div id="export-icon" title="Export overview">
            <i class="fa-solid fa-file-export"></i>
        </div>
    </div>

    @if (displaySpots)
    {
        Console.WriteLine("Modal has spawned");
        @*<SpotModal 
            ShownNplicate="NplicateToShow" 
            xCoordinate="xCoordinate" 
            yCoordinate="yCoordinate" 
            ModalCancelCallback="ModalCancel"/>*@
    }

    <div class="table-view-container">
        <table id="result-table">
            @switch(mode) 
            {
                case "XYZ": <XYZ ClinicalTest="@ClinicalTest" ShowSpots="@((args) => ShowSpots(((MouseEventArgs, Nplicate))args))"></XYZ> break;
                case "Log2": <Log2 ClinicalTest="@ClinicalTest" ShowSpots="@((args) => ShowSpots(((MouseEventArgs, Nplicate))args))"></Log2> break;
            }
        </table>
    </div>
</div>

@code {
    private string mode = "XYZ";
    private bool displaySpots = false;
    private string yCoordinate = "";
    private string xCoordinate = "";
    private Nplicate? NplicateToShow;

    [Parameter, EditorRequired]
    public ClinicalTest ClinicalTest { get; set; }

    public void SetMode(string newmode) {
        mode = newmode;
    }

    public async void ShowSpots((MouseEventArgs, Nplicate)args)
    {
        xCoordinate = (args.Item1.ClientX - args.Item1.OffsetX - 500/2 + 50).ToString() + "px";
        yCoordinate = (args.Item1.ClientY - args.Item1.OffsetY - 213).ToString() + "px";
        NplicateToShow = args.Item2;
        displaySpots = true;
    }   
    
    public void ModalCancel() 
    {
        displaySpots = false;
    }
}
